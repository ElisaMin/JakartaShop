<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>me.heizi.jsp.shopShit.dao.entities.Product</class>
        <class>me.heizi.jsp.shopShit.dao.entities.ProductType</class>
        <class>me.heizi.jsp.shopShit.dao.entities.Order</class>
        <class>me.heizi.jsp.shopShit.dao.entities.PreOrder</class>
        <class>me.heizi.jsp.shopShit.dao.entities.User</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/theDB/temp.db;MV_STORE=false;FILE_LOCK=SOCKET;AUTO_SERVER=TRUE"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
